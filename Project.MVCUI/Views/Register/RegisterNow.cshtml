@model AppUserVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ECommerce">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>RegisterNow</title>

    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/OuterTools/css/owl.carousel.css" type="text/css">
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />

</head>
<body class=" login-body">
    <div class="container">

        <h2>@ViewBag.ZatenVar</h2>

        @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
        {
            <br /><center><h2>Register</h2></center>
            <div class="login-wrap">
                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Chose Your User Name" })
                @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Enter Password" })
                @Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control", placeholder = "Please enter your Email" })

                <br />
                Profile Info (optional) <br />

                @Html.TextBoxFor(x => x.UserProfile.FirstName, new { @class = "form-control", placeholder = "Your Name" })
                @Html.TextBoxFor(x => x.UserProfile.LastName, new { @class = "form-control", placeholder = "Your Last Name" })

                <br />
                <button class="btn btn-primary">Register</button>
                <div>
                    @Html.ActionLink("Login","Login","Home")
                </div>
            </div>
        }


    </div>
</body>
</html>
