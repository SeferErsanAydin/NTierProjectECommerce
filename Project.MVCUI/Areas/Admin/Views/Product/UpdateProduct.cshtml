@model ProductVM
@{
    ViewBag.Title = "UpdateProduct";
}

<style>
    .width {
        width: 300px;
    }
</style>

@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" })) //for adding image Html.Beginform() must be modified as above
{
    @Html.HiddenFor(x=> x.Product.ID)
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Add Product Page
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Product Name:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control width" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2">Product Price:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control width" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2">Products in Stock:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control width" })
                        </div>
                    </div>

                    <br /><br />

                    <div class="form-group">
                        <label class="col-sm-2">Product Category:</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Select Category", new { @class = "form-control width" })
                        </div>
                    </div>

                    <br /><br />

                   

                    <br /><br />
                    <hr />
                    <br />

                    <div class="form-group">
                        <label class="col-sm-2">Action:</label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Update</button>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
}
